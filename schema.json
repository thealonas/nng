{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://raw.githubusercontent.com/MrAlonas/nng/master/schema.json",
  "title": "Root Schema",
  "description": "The root schema is the schema that comprises the entire JSON document.",
  "type": "object",
  "required": [
    "lst"
  ],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "title": "Схема",
      "type": "string"
    },
    "lst": {
      "title": "Список ID групп",
      "description": "Указывается без минуса вначале",
      "type": "array",
      "items": {
        "title": "ID группы",
        "type": "integer"
      }
    },
    "bnnd": {
      "title": "Список заблокированных",
      "type": "array",
      "items": {
        "title": "Информация о заблокированном",
        "type": "object",
        "required": [
          "id",
          "name",
          "priority",
          "bot",
          "warned",
          "deleted"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "title": "ID страницы",
            "type": "integer"
          },
          "name": {
            "title": "Имя и фамилия на момент блокировки",
            "type": "string"
          },
          "priority": {
            "title": "Приоритет блокировки",
            "description": "0 – Белый, 1 – Зелёный, 2 – Бирюзовый, 3 – Оранжевый, 4 – Красный",
            "type": "integer",
            "minimum": 0,
            "maximum": 4
          },
          "bot": {
            "title": "Абьюз бота",
            "type": "boolean"
          },
          "warned": {
            "title": "Количество предупреждений или жалоб",
            "type": "integer"
          },
          "compliant": {
            "title": "Авторы жалоб",
            "type": "array",
            "items": {
              "title": "ID страницы",
              "type": "integer"
            }
          },
          "deleted": {
            "title": "Удаление из списка",
            "type": "boolean"
          }
        }
      }
    },
    "thx": {
      "title": "Список приоритетных",
      "type": "array",
      "items": {
        "title": "Информация о приоритетном",
        "type": "object",
        "required": [
          "id",
          "name"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "title": "ID страницы",
            "type": "integer"
          },
          "name": {
            "title": "Имя и фамилия на момент добавления",
            "type": "string"
          }
        }
      }
    }
  }
}
